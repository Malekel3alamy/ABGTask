<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:id="@+id/item_container"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    android:padding="10dp"
    app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movieImage"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
            app:srcCompat="@drawable/placeholder_ic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/movie_item_numericRating"
            android:text="7.2"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rate_tv_bachground"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            app:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="@id/movie_image"
            app:layout_constraintTop_toTopOf="@id/movie_image" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/movie_image"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="John Wick: Chapter 4"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/movie_image"
            app:layout_constraintBottom_toBottomOf="@id/movie_image"
            />

<!--        <com.google.android.material.textview.MaterialTextView-->
